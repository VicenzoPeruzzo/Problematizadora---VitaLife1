import React, { useEffect, useState } from "react";
import { Link } from "react-router-dom";
import { createPageUrl } from "@/utils";
import { motion } from "framer-motion";
import { 
  Heart, Map, Users, Calendar, Bell, CreditCard, 
  ArrowRight, Sparkles
} from "lucide-react";
import { Button } from "@/components/ui/button";
import { Card, CardContent } from "@/components/ui/card";
import { User } from "@/entities/User";

export default function Home() {
  const [user, setUser] = useState(null);

  useEffect(() => {
    loadUser();
  }, []);

  const loadUser = async () => {
    try {
      const currentUser = await User.me();
      setUser(currentUser);
    } catch (error) {
      console.log("User not logged in");
    }
  };

  const features = [
    {
      icon: Map,
      title: "Mapa da Cidade",
      description: "Encontre hospitais, postos de saúde e clínicas próximas",
      url: createPageUrl("Map"),
      color: "from-blue-500 to-blue-600"
    },
    {
      icon: Users,
      title: "Médicos Parceiros",
      description: "Profissionais qualificados ao seu dispor",
      url: createPageUrl("Doctors"),
      color: "from-purple-500 to-purple-600"
    },
    {
      icon: Calendar,
      title: "Agendamentos",
      description: "Marque suas consultas com facilidade",
      url: createPageUrl("Appointments"),
      color: "from-green-500 to-green-600"
    },
    {
      icon: Bell,
      title: "Lembretes",
      description: "Nunca perca uma consulta importante",
      url: createPageUrl("Reminders"),
      color: "from-orange-500 to-orange-600"
    },
    {
      icon: CreditCard,
      title: "Planos Exclusivos",
      description: "Benefícios especiais para você",
      url: createPageUrl("Subscriptions"),
      color: "from-pink-500 to-pink-600"
    }
  ];

  return (
    <div className="min-h-screen bg-gradient-to-br from-green-50 via-white to-green-50">
      {/* Hero Section */}
      <div className="relative overflow-hidden bg-gradient-to-br from-green-600 to-green-800 text-white">
        <div className="absolute inset-0 bg-black/10"></div>
        <div className="absolute inset-0 bg-[url('data:image/svg+xml;base64,')] opacity-30"></div>
        
        <div className="relative max-w-7xl mx-auto px-6 py-24 md:py-32">
          <motion.div
            initial={{ opacity: 0, y: 30 }}
            animate={{ opacity: 1, y: 0 }}
            transition={{ duration: 0.8 }}
            className="text-center"
          >
            <div className="inline-flex items-center gap-2 px-4 py-2 bg-white/20 backdrop-blur-sm rounded-full mb-6">
              <Sparkles className="w-4 h-4" />
              <span className="text-sm font-medium">Sua saúde, nossa prioridade</span>
            </div>
            
            <h1 className="text-5xl md:text-7xl font-bold mb-6 tracking-tight">
              Bem-vindo ao <span className="text-green-200">VitaLife</span>
            </h1>
            
            <p className="text-xl md:text-2xl text-green-100 mb-8 max-w-3xl mx-auto">
              Plataforma integrada de saúde que centraliza e simplifica o acesso a serviços médicos
            </p>

            {user ? (
              <div className="flex flex-col sm:flex-row gap-4 justify-center">
                <Link to={createPageUrl("Doctors")}>
                  <Button size="lg" className="bg-white text-green-700 hover:bg-green-50 font-semibold px-8 shadow-xl">
                    Encontrar Médicos
                    <ArrowRight className="w-5 h-5 ml-2" />
                  </Button>
                </Link>
                <Link to={createPageUrl("Appointments")}>
                  <Button size="lg" variant="outline" className="bg-transparent border-2 border-white text-white hover:bg-white hover:text-green-700 font-semibold px-8">
                    Agendar Consulta
                  </Button>
                </Link>
              </div>
            ) : (
              <Button 
                size="lg" 
                onClick={() => User.login()}
                className="bg-white text-green-700 hover:bg-green-50 font-semibold px-8 shadow-xl"
              >
                Começar Agora
                <ArrowRight className="w-5 h-5 ml-2" />
              </Button>
            )}
          </motion.div>

          {/* Decorative Elements */}
          <div className="absolute top-20 left-10 w-20 h-20 bg-white/10 rounded-full blur-3xl"></div>
          <div className="absolute bottom-20 right-10 w-32 h-32 bg-green-400/20 rounded-full blur-3xl"></div>
        </div>
      </div>

      {/* Features Section */}
      <div className="max-w-7xl mx-auto px-6 py-20">
        <motion.div
          initial={{ opacity: 0 }}
          animate={{ opacity: 1 }}
          transition={{ delay: 0.3 }}
          className="text-center mb-16"
        >
          <h2 className="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
            Recursos Poderosos
          </h2>
          <p className="text-xl text-gray-600 max-w-2xl mx-auto">
            Tudo que você precisa para cuidar da sua saúde em um só lugar
          </p>
        </motion.div>

        <div className="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
          {features.map((feature, index) => (
            <motion.div
              key={feature.title}
              initial={{ opacity: 0, y: 20 }}
              animate={{ opacity: 1, y: 0 }}
              transition={{ delay: 0.1 * index }}
            >
              <Link to={feature.url}>
                <Card className="group hover:shadow-2xl transition-all duration-300 border-none overflow-hidden h-full bg-white">
                  <CardContent className="p-8">
                    <div className={`w-16 h-16 bg-gradient-to-br ${feature.color} rounded-2xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform shadow-lg`}>
                      <feature.icon className="w-8 h-8 text-white" />
                    </div>
                    <h3 className="text-2xl font-bold text-gray-900 mb-3">
                      {feature.title}
                    </h3>
                    <p className="text-gray-600 leading-relaxed">
                      {feature.description}
                    </p>
                    <div className="mt-6 flex items-center text-green-600 font-medium group-hover:translate-x-2 transition-transform">
                      Explorar
                      <ArrowRight className="w-4 h-4 ml-2" />
                    </div>
                  </CardContent>
                </Card>
              </Link>
            </motion.div>
          ))}
        </div>
      </div>

      {/* CTA Section */}
      <div className="bg-gradient-to-r from-green-600 to-green-700 text-white py-20">
        <div className="max-w-4xl mx-auto px-6 text-center">
          <Heart className="w-16 h-16 mx-auto mb-6 text-green-200" />
          <h2 className="text-4xl md:text-5xl font-bold mb-6">
            Pronto para cuidar da sua saúde?
          </h2>
          <p className="text-xl text-green-100 mb-8">
            Junte-se a milhares de pessoas que já confiam no VitaLife
          </p>
          {!user && (
            <Button 
              size="lg"
              onClick={() => User.login()}
              className="bg-white text-green-700 hover:bg-green-50 font-semibold px-8 py-6 text-lg shadow-xl"
            >
              Criar Conta Grátis
              <ArrowRight className="w-5 h-5 ml-2" />
            </Button>
          )}
        </div>
      </div>
    </div>
  );
}
